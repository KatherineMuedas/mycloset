.row
  %div
    .small-12.medium-6.large-5.columns.text-center.pad-top-50  
      - if @picture 
        = image_tag (@clothe.picture.photo.url(:large))
    .small-12.medium-6.large-7.columns.pad-top-50.pad-bottom-50  
      .clothe-card.text-center
        %h4.margin-bottom-0.margin-top-15
          = @clothe.name 
          = link_to edit_closet_clothe_path(@closet.id, 
          @clothe.id) do
            %span.small
              %i.fa.fa-pencil 
        %h6.text-center.text-dark-gray.margin-bottom-10= @clothe.brand
        .text-center.light-border-top.pad-top-20
          - if @clothe.state_category
            %p It is #{@clothe.state_category}
          - if @clothe.purchase_at
            %p Got it in #{@clothe.purchase_at.strftime('%Y')} 
        - if @clothe.notes.empty? 
          %p.margin-top-40.link= link_to 'Add a note', edit_closet_clothe_path(@closet.id, 
          @clothe.id)
        - else 
          %p Notes: #{ @clothe.notes}

      .row.text-center
        .div.large-12-columns.pad-top-30
          = link_to 'Delete this clothing',closet_clothe_path(@closet.id, @clothe.id), method: :delete, data: { confirm: 'Are you sure you want to delete this clothe?' }, class: 'button alert tiny round ' 
            
.row
  %div
    %p.margin-top-40
      = link_to 'Back', closet_path(@closet.id), class: 'small secondary round button left'
       
        
       

